<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
    android:background="@drawable/nenchinh">

    <ImageButton
        android:id="@+id/myImageButton"
        android:layout_width="83dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:background="#00FDFDFC"
        android:contentDescription="Mcuts"
        android:src="@drawable/muiten">

    </ImageButton>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baothuc"
        android:layout_marginStart="94dp"
        android:layout_marginTop="218dp"
        android:layout_toEndOf="@+id/editTextTime3"
        android:buttonTint="#2196F3"
        android:checked="true"
        android:clickable="true"
        android:ellipsize="none"
        android:text="Đặt"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="20sp"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/myImageButton"
        android:layout_weight="1"
        android:drawablePadding="16dp"
        android:text="Báo thức"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:text="Cài đặt"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="170dp"
        android:text="Giờ đi ngủ"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/editTextTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="-9dp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/textView7"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Đặt giờ"
        android:inputType="time"
        android:textColor="#ffffff"
        android:textColorHint="#938B8B"
        android:textSize="30sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="227dp"
        android:text="Giờ thức dậy"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/editTextTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTime1"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="-12dp"
        android:layout_toEndOf="@+id/textView8"
        android:textAlignment="center"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Đặt giờ"
        android:inputType="time"
        android:textColor="#ffffff"
        android:textColorHint="#938B8B"
        android:textSize="30sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/baothuc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="125dp"
        android:layout_weight="1"


        android:text="Báo thức"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextTime3"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baothuc"
        android:layout_marginStart="-186dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_weight="1"
        android:ems="10"
        android:hint="9:00"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#938B8B"
        android:textSize="30sp"
        android:visibility="visible" />


    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTime3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="16/09/2023"
        android:inputType="date"
        android:textAlignment="center"
        android:textColorHint="#938B8B"
        android:textSize="25sp" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baothuc"
        android:layout_marginStart="95dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/editTextTime3"
        android:buttonTint="#2196F3"
        android:checked="true"
        android:clickable="true"
        android:ellipsize="none"
        android:text="Đặt"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="20sp"
        tools:visibility="visible" />


    <EditText
        android:id="@+id/editTextTime4"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="10:00"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#938B8B"
        android:textSize="30sp"
        android:visibility="visible" />


    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextTime4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="16/09/2023"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#938B8B"
        android:textSize="27sp"
        android:visibility="visible" />


</RelativeLayout>